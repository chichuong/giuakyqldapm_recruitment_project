<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #337ab7; /* Màu xanh dương hiện đại */
            --secondary-color: #5cb85c;
            --background-color: #eef1f6; /* Nền xám nhạt */
            --form-bg: white;
            --shadow-light: 0 4px 15px rgba(0, 0, 0, 0.1);
            --shadow-hover: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        /* RESET & BASE STYLES */
        body {
            font-family: 'Poppins', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: var(--background-color);
            margin: 0;
            padding: 20px;
        }
        
        /* FORM STYLES */
        form {
            background: var(--form-bg);
            padding: 3rem; /* Tăng padding */
            border-radius: 12px; /* Bo góc mềm mại hơn */
            box-shadow: var(--shadow-light);
            width: 100%;
            max-width: 400px; /* Giới hạn chiều rộng tối đa */
            transition: box-shadow 0.3s ease;
        }

        form:hover {
            box-shadow: var(--shadow-hover);
        }

        h2 {
            text-align: center;
            color: #333;
            margin-bottom: 2rem;
            font-weight: 600;
        }
        
        label {
            display: block;
            margin-bottom: 0.4rem;
            color: #555;
            font-size: 0.95rem;
            font-weight: 600;
        }
        
        input {
            width: 100%;
            padding: 0.75rem; /* Tăng padding input */
            margin-bottom: 1.5rem;
            border: 1px solid #ddd;
            border-radius: 6px; /* Bo góc input */
            box-sizing: border-box; /* Quan trọng để padding không làm hỏng width: 100% */
            font-size: 1rem;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

        input:focus {
            border-color: var(--primary-color);
            outline: none;
            box-shadow: 0 0 0 3px rgba(51, 122, 183, 0.2); /* Hiệu ứng focus nhẹ */
        }
        
        /* BUTTON STYLES */
        button {
            width: 100%; /* Nút đầy đủ chiều rộng */
            padding: 0.85rem;
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 1.05rem;
            font-weight: 600;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        button:hover {
            background-color: #286090; /* Màu đậm hơn khi hover */
            transform: translateY(-1px); /* Hiệu ứng nhấc nhẹ */
        }

        button:active {
            transform: translateY(0);
        }
        
        /* ERROR MESSAGE STYLES */
        .error {
            color: #d9534f; /* Màu đỏ nổi bật hơn */
            background-color: #fdd;
            border: 1px solid #f00;
            padding: 0.75rem;
            border-radius: 4px;
            text-align: center;
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body>
    <form action="/api/admin/login" method="POST">
        <h2>Admin Login</h2>
        <% if (typeof error !== 'undefined' && error) { %>
            <p class="error"><%= error %></p>
        <% } %>
        <div>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required placeholder="Nhập địa chỉ email của bạn">
        </div>
        <div>
            <label for="password">Mật khẩu:</label>
            <input type="password" id="password" name="password" required placeholder="Nhập mật khẩu của bạn">
        </div>
        <button type="submit">Đăng nhập</button>
    </form>
    <script>
        // Lấy token từ biến EJS mà backend truyền vào
        const jwtToken = '<%= typeof token !== "undefined" ? token : null %>';

        // Kiểm tra xem token có giá trị hợp lệ không (không phải null hay chuỗi 'null')
        if (jwtToken && jwtToken !== 'null') {
            // Lưu token vào localStorage
            localStorage.setItem('adminToken', jwtToken);
            console.log('Admin token saved to localStorage.');
            // Chuyển hướng đến trang dashboard
            window.location.href = '/api/admin/dashboard';
        } else {
            console.log('No admin token found on this render.');
        }
    </script>
</body>
</html>